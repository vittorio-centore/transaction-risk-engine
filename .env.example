# database configuration
# when using docker, use 'postgres' as hostname (container name)
# when running locally, use 'localhost'
DATABASE_URL=postgresql+asyncpg://frauduser:fraudpass@postgres:5432/frauddb
DATABASE_URL_SYNC=postgresql://frauduser:fraudpass@postgres:5432/frauddb

# for running scripts locally (outside docker), use localhost
DATABASE_URL_LOCAL=postgresql+asyncpg://frauduser:fraudpass@localhost:5432/frauddb

# model configuration
MODEL_VERSION=v1
MODEL_PATH=models/fraud_model_v1.pt

# decision thresholds
DECLINE_THRESHOLD=0.8
REVIEW_THRESHOLD=0.5

# cache configuration (in seconds)
USER_CACHE_TTL=300
MERCHANT_CACHE_TTL=1800

# api configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
